    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/societySchool_tip_tv"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="4dp"
            android:text="学校"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/societySchool_tv"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="3"
            android:gravity="center|left"
            android:paddingLeft="4dp"
            android:text="南京师范大学中北学院"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/societyInfo_tip_tv"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="4dp"
            android:text="社团简介"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/societyInfo_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center|left"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:text="这是舞蹈社"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/societyleader_tip_tv"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="4dp"
            android:text="社团主席"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/societyleader_tv"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="3"
            android:gravity="center|left"
            android:paddingLeft="4dp"
            android:text="XXX"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/societymembers_tip_tv"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:gravity="center|left"
            android:paddingLeft="4dp"
            android:text="社团人数"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/societymembers_tv"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="3"
            android:gravity="center|left"
            android:paddingLeft="4dp"
            android:text="25"
            android:textSize="18sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.80" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/order_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="申请加入"
            android:textColor="#fff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/enter_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:text="进入"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>