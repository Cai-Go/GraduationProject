<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_backcolor"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/splash_imgView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="134dp"
        android:background="@drawable/splash_logo" />

    <TextView
        android:id="@+id/splash_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_imgView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="@string/splash_name1"
        android:textColor="@color/splash_textcolor1"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/splash_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_textView1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/splash_name2"
        android:textColor="@color/splash_textcolor2"
        android:textSize="42sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/splash_imgView"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/splash_imgView"
        android:layout_marginBottom="24dp"
        android:text="@string/author"
        android:textColor="@color/author_textcolor"
        android:textSize="18sp" />

</RelativeLayout>