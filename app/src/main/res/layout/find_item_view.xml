<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <View
        android:id="@+id/view_1"
        android:layout_width="1dp"
        android:layout_height="25dp"
        android:layout_marginLeft="53dp"
        android:background="#ff00e6" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/logo_imageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@id/view_1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="5dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#5be2fd"
        app:civ_border_width="1dp" />

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:layout_below="@id/logo_imageview"
        android:layout_marginLeft="53dp"
        android:background="#ff00e6" />

    <android.support.v7.widget.CardView
        android:id="@+id/find_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="88dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#5fd5f9"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="动漫展"
                android:textColor="#590065"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateTiem_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2015-6-1"
                android:textColor="#00288f"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/organizerName_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="动漫社"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="italic" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>