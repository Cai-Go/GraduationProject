<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
    android:orientation="vertical">

    <include layout="@layout/toolbar_title" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:background="#480067"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/events_image"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:scaleType="fitXY"
                android:src="@drawable/tests" />

            <TextView
                style="@style/EventsActivityStyleLabel"
                android:layout_marginTop="8dp"
                android:text="活动名称" />

            <TextView
                android:id="@+id/eventsName_tv"
                style="@style/EventsActivityStyContent"
                android:text="动漫展" />

            <TextView
                style="@style/EventsActivityStyleLabel"
                android:text="活动时间" />

            <TextView
                android:id="@+id/eventstime_tv"
                style="@style/EventsActivityStyContent"
                android:text="2015-5-30" />

            <TextView
                style="@style/EventsActivityStyleLabel"
                android:text="活动组织方" />

            <TextView
                android:id="@+id/eventsOrganizer_tv"
                style="@style/EventsActivityStyContent"
                android:text="动漫社" />

            <TextView
                style="@style/EventsActivityStyleLabel"
                android:text="活动地点" />

            <TextView
                android:id="@+id/eventsLocation_tv"
                style="@style/EventsActivityStyContent"
                android:text="南师大" />

            <TextView
                style="@style/EventsActivityStyleLabel"
                android:text="活动人数" />

            <TextView
                android:id="@+id/eventsLimitMember_tv"
                style="@style/EventsActivityStyContent"
                android:text="100" />

            <TextView
                style="@style/EventsActivityStyleLabel"
                android:text="活动状态" />

            <TextView
                android:id="@+id/eventsStatus_tv"
                style="@style/EventsActivityStyContent"
                android:text="报名中..." />

            <TextView
                style="@style/EventsActivityStyleLabel"
                android:text="活动介绍" />

            <TextView
                android:id="@+id/eventsContent_tv"
                style="@style/EventsActivityStyContent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:text="这是动漫活动...
                是动漫活动...
                动漫活动...
                漫活动...
                活动..." />

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/submit_ripple"
                android:text="报名"
                android:textColor="#fff"
                android:textSize="24sp" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>