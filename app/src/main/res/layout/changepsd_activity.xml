<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0dfdf"
    android:orientation="vertical">

    <include layout="@layout/toolbar_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_email_black_12dp" />

        <EditText
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:hint="请输入注册邮箱..."
            android:paddingBottom="16dp"
            android:paddingTop="14dp"
            android:singleLine="true"
            android:textColor="#38d1df"
            android:textColorHint="#cacaca"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/findpsdback_btn"
        android:layout_width="160dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="12dp"
        android:background="@drawable/ripple_bg"
        android:text="找回密码"
        android:textColor="#fff"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/rl_reset_psd_finished4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_reset_psd_finished4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="50dp"
            android:contentDescription="邮箱验证成功"
            android:scaleType="fitXY"
            android:src="@drawable/ok" />

        <TextView
            android:id="@+id/tv_reset_psd_finished4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_reset_psd_finished4"
            android:layout_centerInParent="true"
            android:text="验证邮件已发送，请尽快前往邮箱修改密码"
            android:textColor="#0582dc"
            android:textSize="14sp" />


    </RelativeLayout>
</LinearLayout>