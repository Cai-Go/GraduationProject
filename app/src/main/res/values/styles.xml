<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!--活动详情页标题样式-->
    <style name="EventsActivityStyleLabel">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">8dp</item>
    </style>


    <!--活动详情页内容样式-->
    <style name="EventsActivityStyContent">
        <item name="android:textColor">#00ffe1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <!--社团申请页样式-->
    <style name="SocietyOrderStyleLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SocietyOrderStyleTextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SocietyOrderStyleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MessageItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:paddingLeft">8dp</item>
    </style>
</resources>
